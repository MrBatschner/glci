glci:
  base_definition:
    traits:
      notifications:
        default:
          on_error:
            triggering_policy: 'never'

  jobs:
    on-head-update:
      repo:
        trigger: false
      repos:
      - name: 'GARDENLINUX'
        cfg_name: 'github_com'
        path: 'gardenlinux/gardenlinux'
        branch: 'main'
      steps:
        list-available-releases:
          execute:
          - '../ls-manifests'
          - '--print'
          - 'versions-and-commits'
          image: 'eu.gcr.io/gardener-project/glci/job-image:0.1.0'

    update-job-image:
      repo:
        trigger: false
      traits:
        publish:
          dockerimages:
            job-image:
              image: 'eu.gcr.io/gardener-project/glci/job-image'
              dockerfile: 'Dockerfile'
              tag_as_latest: true
        version:
          versionfile: 'job-image-version'
          preprocess: 'finalise'
        release:
          release_on_github: false
        component_descriptor:
          component_name: 'github.com/gardenlinux/glci/utils'
